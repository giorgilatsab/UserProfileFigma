<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brown"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:background="@drawable/ic_rectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <TextView
        android:layout_width="209dp"
        android:layout_height="59dp"
        android:text="@string/hello"
        android:textSize="42sp"
        android:textColor="@color/white"
        android:layout_marginStart="32dp"
        android:layout_marginTop="210dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:text="@string/lets_introduce"
        android:textSize="24sp"
        android:textColor="@color/brownLittle"
        android:layout_marginStart="32dp"
        android:layout_marginTop="272dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="338dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_icon"

            />
        <EditText
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:hint="@string/Your_full_name"
            android:textColorHint="@color/brownLittle"
            android:padding="0dp"
            android:layout_marginStart="56dp"
            android:backgroundTint="#00000000"
            android:drawableBottom="@drawable/ic_line__1_"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="430dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="38dp"
            android:layout_height="48dp"
            android:background="@drawable/ic_icon"

            />
        <EditText
            android:layout_width="309dp"
            android:layout_height="match_parent"
            android:hint="@string/username"
            android:textColorHint="@color/brownLittle"
            android:padding="0dp"
            android:layout_marginStart="56dp"
            android:backgroundTint="#00000000"
            android:drawableBottom="@drawable/ic_line__1_"
            />

    </RelativeLayout>


    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/ic_next_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>